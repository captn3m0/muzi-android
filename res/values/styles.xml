<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        
        <item name="android:actionBarTabTextStyle">@style/CustomTabTextStyle</item>
        <!--<item name="android:actionBarItemBackground">@drawable/arrow_icon</item>-->
        <item name="android:actionBarStyle">@style/CustomActionBarUpAsHome</item>
        <item name="android:homeAsUpIndicator">@drawable/arrow_icon</item>
        <item name="homeAsUpIndicator">@drawable/arrow_icon</item>
    </style>

    <style name="CustomTabTextStyle" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">#424242</item>
    </style>
    
    <style name="CustomActionBarUpAsHome" parent="AppTheme">
        <item name="android:displayOptions">homeAsUp|useLogo|showHome</item>
        <item name="displayOptions">homeAsUp|useLogo|showHome</item>
    </style>

    <color name="Black">#000</color>
    <color name="white">#FFFFFF</color>

    <style name="tvAlphabets" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">onClick</item>
    </style>
    
    <style name="tv_header_for_songs_from_album" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- It should be a default drawable here to use if album cover is unavailable -->

    <TextView
        android:id="@+id/tvAlbumName"
        style="@style/tv_header_for_songs_from_album" />

    <TextView
        android:id="@+id/tvAlbumArtist"
        style="@style/tv_header_for_songs_from_album"
        android:layout_below="@id/tvAlbumName" />

    <TextView
        android:id="@+id/tvAlbumYear"
        style="@style/tv_header_for_songs_from_album"
        android:layout_below="@id/tvAlbumArtist" />

    <ImageView
        android:contentDescription="Default Image"
        android:id="@+id/ivAlbumCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon" />

</RelativeLayout>
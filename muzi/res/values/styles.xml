<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.Sherlock">
        <item name="actionBarItemBackground">@drawable/selectable_background_black</item>
        <item name="popupMenuStyle">@style/PopupMenu.Black</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Black</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Black</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Black</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Black</item>
        <item name="actionModeBackground">@drawable/cab_background_top_black</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_black</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Black</item>
    </style>

    <style name="ActionBar.Solid.Black" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_black</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_black</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_black</item>
        <item name="progressBarStyle">@style/ProgressBar.Black</item>
    </style>

    <style name="ActionBar.Transparent.Black" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_black</item>
        <item name="progressBarStyle">@style/ProgressBar.Black</item>
    </style>

    <style name="PopupMenu.Black" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_black</item>
    </style>

    <style name="DropDownListView.Black" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_black</item>
    </style>

    <style name="ActionBarTabStyle.Black" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_black</item>
    </style>

    <style name="DropDownNav.Black" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_black</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_black</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_black</item>
    </style>

    <style name="ProgressBar.Black" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_black</item>
    </style>

    <style name="ActionButton.CloseMode.Black" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_black</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Black.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Black</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Black</item>
    </style>
    
    <style name="tvAlphabets" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:onClick">onAlphabetClick</item>
    </style>

    <style name="tv_header_for_songs_from_album" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="tv_lang_settings" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="parent_layout" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@color/Black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <color name="Black">#000</color>
    <color name="white">#FFFFFF</color>
    <color name="pressed_black">#CC222222</color>

</resources>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    style="@style/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/tv_lang_settings"
                    android:text="English" />

                <ToggleButton
                    android:id="@+id/tbEnglish"
                    android:layout_width="137px"
                    android:layout_height="36px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/toggleswitch"
                    android:checked="true"
                    android:onClick="onToggleClicked"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/tv_lang_settings"
                    android:text="Hindi" />

                <ToggleButton
                    android:id="@+id/tbHindi"
                    android:layout_width="137px"
                    android:layout_height="36px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/toggleswitch"
                    android:checked="true"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/tv_lang_settings"
                    android:text="Tamil" />

                <ToggleButton
                    android:id="@+id/tbTamil"
                    android:layout_width="137px"
                    android:layout_height="36px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/toggleswitch"
                    android:checked="true"
                    android:onClick="onToggleClicked"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>
        </LinearLayout>

        <muzi.sdslabs.co.in.FooterForPlayerControls
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:scrollbars="none" />

</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/parent_layout" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/tv_lang_settings"
                android:text="English" />

            <ToggleButton
                android:id="@+id/tbEnglish"
                android:layout_width="137px"
                android:layout_height="36px"
                android:layout_alignParentRight="true"
                android:background="@drawable/toggleswitch"
                android:checked="true"
                android:onClick="onToggleClicked"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/tv_lang_settings"
                android:text="Hindi" />

            <ToggleButton
                android:id="@+id/tbHindi"
                android:layout_width="137px"
                android:layout_height="36px"
                android:layout_alignParentRight="true"
                android:background="@drawable/toggleswitch"
                android:checked="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/tv_lang_settings"
                android:text="Tamil" />

            <ToggleButton
                android:id="@+id/tbTamil"
                android:layout_width="137px"
                android:layout_height="36px"
                android:layout_alignParentRight="true"
                android:background="@drawable/toggleswitch"
                android:checked="true"
                android:onClick="onToggleClicked"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>